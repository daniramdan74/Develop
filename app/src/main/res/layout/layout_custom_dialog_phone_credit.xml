<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="10dp"
              android:paddingLeft="20dp"
              android:paddingRight="10dp"
              android:paddingBottom="5dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Provider"/>
    <TextView
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp"
        android:text="Telkomsel"
        android:textStyle="bold"
        android:id="@+id/detail_data_provider_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nominal"/>

    <TextView
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="300.0000"
        android:id="@+id/detail_data_nominal_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor Telepon"/>
    <TextView
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="0123456789"
        android:id="@+id/detail_data_number_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:paddingLeft="0dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorDivide"
        android:id="@+id/confirm_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Sudah Sesuai."/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel_button"
            android:layout_toLeftOf="@+id/confirm_button"
            android:textColor="@color/colorPrimaryDark"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="Batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/confirm_button"
            android:textColor="@color/colorPrimaryDark"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="Konfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>