<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.dipesan.miniatm.miniatm.view.transfer.TransferFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/fragment_transfer_inter_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_compare_arrows_white"
                android:text="@string/interbank"
                android:textColor="@color/colorTextIcons"
                android:textStyle="bold"
                android:theme="@style/ButtonTheme"
                />

            <Button
                android:id="@+id/fragment_transfer_fellow_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_swap_horiz_white"
                android:text="@string/fellow_bank"
                android:textColor="@color/colorTextIcons"
                android:textStyle="bold"
                android:theme="@style/ButtonTheme"
                />

    </LinearLayout>

</FrameLayout>
