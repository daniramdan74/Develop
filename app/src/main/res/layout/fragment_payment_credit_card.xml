<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.dipesan.miniatm.miniatm.view.payment.PaymentCreditCardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragpayment_credit_card_providers_text_input_layout"
                style="@style/TextInputLayoutForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/fragpayment_credit_card_providers_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="@string/paymentcreditcardBank"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragpayment_credit_card_customer_number_text_input_layout"
                style="@style/TextInputLayoutForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/fragpayment_credit_card_customer_number_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="@string/paymentcreditcardCardNumber"
                    android:inputType="number"
                    android:maxLength="20"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/fragpayment_credit_card_process_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/process"
                android:theme="@style/ButtonTheme"/>

            <LinearLayout
                android:id="@+id/fragpayment_credit_card_detail_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:gravity="center_horizontal"
                                android:text="Detail Informasi"
                                android:textColor="@color/colorTextIcons"
                                android:textStyle="bold"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp">

                            <TextView

                                android:id="@+id/textview1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="Pembayaran Kartu Kredit"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textview2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textview1"
                                android:layout_marginLeft="75dp"
                                android:layout_marginTop="5dp"
                                android:text="Bank : "
                                />

                            <TextView
                                android:id="@+id/textview3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/textview2"
                                android:layout_below="@+id/textview2"
                                android:layout_marginTop="5dp"
                                android:text="No Kartu : "
                                />

                            <TextView
                                android:id="@+id/textview4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/textview2"
                                android:layout_below="@+id/textview3"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Jenis Kartu : "
                                />

                            <TextView
                                android:id="@+id/textview5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/textview2"
                                android:layout_below="@+id/textview4"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Nama Pemilik : "
                                />

                            <TextView
                                android:id="@+id/textview6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/textview2"
                                android:layout_below="@+id/textview5"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Jumlah : "
                                />


                            <TextView
                                android:id="@+id/textview7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textview6"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:text="Dari"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textview8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/textview2"
                                android:layout_below="@+id/textview7"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Bank : "/>

                            <TextView
                                android:id="@+id/textview9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/textview2"
                                android:layout_below="@+id/textview8"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:text="No Rekening : "/>

                            <TextView
                                android:id="@+id/textview10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/textview2"
                                android:layout_below="@+id/textview9"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Nama Pemilik : "/>

                            <TextView
                                android:id="@+id/fragpayment_credit_card_bank_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/textview2"
                                android:layout_toRightOf="@+id/textview2"
                                android:text="Kredit"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/fragpayment_card_number_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/fragpayment_credit_card_bank_text_view"
                                android:layout_alignTop="@+id/textview3"
                                android:text="Kredit"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/fragpayment_type_card_bank_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/fragpayment_credit_card_bank_text_view"
                                android:layout_alignTop="@+id/textview4"
                                android:text="Kredit"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/fragpayment_credit_account_name_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/fragpayment_credit_card_bank_text_view"
                                android:layout_alignTop="@+id/textview5"
                                android:text="Kredit"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/fragpayment_amount_transfer_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/fragpayment_credit_card_bank_text_view"
                                android:layout_alignTop="@+id/textview6"
                                android:text="Kredit"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/fragpayment_credit_from_bank_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/fragpayment_credit_card_bank_text_view"
                                android:layout_alignTop="@+id/textview8"
                                android:text="Kredit"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/fragpayment_credit_from_account_number_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/fragpayment_credit_card_bank_text_view"
                                android:layout_alignTop="@+id/textview9"
                                android:text="Kredit"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/fragpayment_credit_from_account_name_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/fragpayment_credit_card_bank_text_view"
                                android:layout_alignTop="@+id/textview10"
                                android:text="Kredit"
                                android:textStyle="bold"/>

                        </RelativeLayout>

                        <CheckBox
                            android:id="@+id/fragpayment_credit_data_matches_check_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/data_mathes"
                            android:textColor="@color/colorDivide"
                            />

                        <Button
                            android:id="@+id/fragpayment_credit_send_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/send"
                            android:textStyle="bold"
                            android:theme="@style/ButtonTheme"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
